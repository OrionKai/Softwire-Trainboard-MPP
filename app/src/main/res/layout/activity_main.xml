<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/main_text"
            android:textSize="42sp"
            android:layout_margin="50sp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/departure_text"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/departure"
        app:layout_constraintStart_toStartOf="@id/main_text"
        app:layout_constraintTop_toBottomOf="@id/main_text"
        />

    <TextView
        android:id="@+id/arrivals_text"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/arrival"
        app:layout_constraintEnd_toEndOf="@id/main_text"
        app:layout_constraintTop_toBottomOf="@id/main_text"
        />

    <Spinner
        android:id="@+id/departure_spinner"
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        app:layout_constraintEnd_toEndOf="@id/departure_text"
        app:layout_constraintStart_toStartOf="@id/departure_text"
        app:layout_constraintTop_toBottomOf="@id/departure_text" />

    <Spinner
        android:id="@+id/arrival_spinner"
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        app:layout_constraintEnd_toEndOf="@id/arrivals_text"
        app:layout_constraintStart_toStartOf="@id/arrivals_text"
        app:layout_constraintTop_toBottomOf="@id/arrivals_text"
        />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/departure_spinner"
        android:text="@string/go" />

</androidx.constraintlayout.widget.ConstraintLayout>